<?xml version="1.0" encoding="UTF-8"?>
<options>
  <title>MarioDesk</title>
  <date_format>d/m/Y</date_format>
  <time_format>H:i</time_format>
  <datetime_format>d/m/Y H:i</datetime_format>
  <upload_opt>ftp</upload_opt>
  <upload_max_size>2097152</upload_max_size>

  <html_permited>
    <tag>font</tag>
    <tag>a</tag>
    <tag>b</tag>
    <tag>i</tag>
  </html_permited>

  <menu>
    <menu_tabs xml:id="home">Home</menu_tabs>
    <menu_tabs xml:id="createTicket">Escrever</menu_tabs>
    <menu_tabs xml:id="departmentTickets">Listar</menu_tabs>
    <menu_tabs xml:id="search">Busca Avançada</menu_tabs>
    <menu_tabs xml:id="admin">Administração</menu_tabs>
    <menu_tabs xml:id="logout">Logout</menu_tabs>
  </menu>

  <avail_languages choosen="pt_BR">
    <language xml:id="pt_br" title="Português (BR)">pt_BR</language>
    <language xml:id="eng" title="Inglês">eng</language>
  </avail_languages>
  
  <avail_templates choosen="default">
    <template xml:id="default" path="default" thumbnail="defaultTemplate.jpg" description="Template default para uso do mais novo sistema de HelpDesk do mercado.">default</template>
  </avail_templates>

